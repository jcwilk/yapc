%html
  %head
    %title Yet Another (experimental) Push Chat
    %script{:type => 'text/javascript', :src => '/javascripts/head.min.js'}
    :javascript
      head.js("https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js",
              "/javascripts/jquery.titlealert.min.js",
              "/javascripts/jquery.jsonp-2.1.4.min.js",
              "http://#{Yapc::PUSH_APP_HOST}/push.js",
              "/javascripts/time-queue.js",
              "/javascripts/yapc.js",
              function(){
                $(document).ready(function(){
                  Yapc.initializeChat('text-field','messages-start','#{Yapc::PUSH_APP_HOST}');
                  $('.no-behavior-content').hide();
                  $('.behavior-content').show()
                })
              })
    %link{:href => '/stylesheets/yapc.css', :rel => 'stylesheet', :type => 'text/css'}
  %body
    .no-behavior-content
      Loading chat...
    .behavior-content
      %input{:type => 'text', :name => 'text', :id => 'text-field'}
      .messages
        #messages-start
          ='-----------------------------------'